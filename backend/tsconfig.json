{
  "compilerOptions": {
    "types": ["express", "node"],
    "target": "ES2020",
    "outDir": "dist",
    "module": "commonjs",
    "sourceMap": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@features/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "layer"]
}
