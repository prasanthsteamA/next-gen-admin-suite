{
  "name": "iris-fleet-backend",
  "version": "1.0.0",
  "description": "IRIS Fleet Management Backend - Serverless AWS Lambda with Express.js",
  "main": "dist/index.js",
  "scripts": {
    "tsc": "tsc",
    "watch-tsc": "tsc -w",
    "dev": "nodemon --exec ts-node src/index.ts",
    "stage": "NODE_ENV=staging nodemon --exec ts-node src/index.ts",
    "build": "tsc && npm run build-layer",
    "build-layer": "mkdir -p layer/nodejs && cp package.json layer/nodejs/ && cd layer/nodejs && npm install --production",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage prod",
    "deploy:uat": "serverless deploy --stage uat",
    "deploy:live": "serverless deploy --stage live",
    "deploy:authorizer-dev": "serverless deploy function -f authorizer --stage dev",
    "deploy:authorizer-prod": "serverless deploy function -f authorizer --stage prod",
    "deploy:resources:dev": "serverless deploy --stage dev --config serverless-resources.yml",
    "deploy:resources:prod": "serverless deploy --stage prod --config serverless-resources.yml",
    "offline:dev": "serverless offline --stage dev",
    "offline:staging": "serverless offline --stage staging",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.400.0",
    "@aws-sdk/client-lambda": "^3.400.0",
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/client-ses": "^3.400.0",
    "@aws-sdk/client-sns": "^3.400.0",
    "@aws-sdk/client-ssm": "^3.400.0",
    "@aws-sdk/client-scheduler": "^3.400.0",
    "@aws-sdk/client-sfn": "^3.400.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "pg": "^8.11.3",
    "pg-native": "^3.0.1",
    "qrcode": "^1.5.3",
    "serverless-http": "^3.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/aws-lambda": "^8.10.131",
    "nodemon": "^3.0.2",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.50.1",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-offline": "^13.3.0",
    "serverless-plugin-typescript-express": "^1.0.0",
    "serverless-prune-versions": "^1.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
